extends layout

block head
	script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")

block content

	div(id="overview", class="container")

		h1=title

		div(class="section row")
			div(class="flow-text col m6 s12")
				ul(class="collection with-header" style="font-size:1rem")
					li(class="collection-header") 
						h6 Sinulle l&auml;hetetyt kaveripyynn&ouml;t
						request-component(
							v-for="req in friendRequests", 
							v-bind:request="req", 
							v-bind:key="req.id",
							v-on:accept-friend="acceptFriend(req)"
						)
			div(class="flow-text col m6 s12")
				ul(class="collection with-header" style="font-size:1rem")
					li(class="collection-header") 
						h6 Kaverisi
						friend-component(
							v-for="fri in friends", 
							v-bind:friend="fri", 
							v-bind:key="fri.id"
						)
						
		div(class="section row")
			div(class="col")
				p {{ errortext }}

	script(type="text/javascript", src="../friendOverview.js")