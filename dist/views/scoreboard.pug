extends layout

block content
	div.container.row
		h1=title
		div(class="col s12 l6")
			h4 Top 10 maailma
			table(class="")
				thead
					tr
						th Pisteet
						th L&auml;mp&ouml;tila(&deg;C)
						th K&auml;ytt&auml;j&auml;
						th P&auml;iv&auml;m&auml;&auml;r&auml;
				tbody
					each score in score_list_world
						tr
							td #{score.value} 
							td #{score.temperature}
							if(score.user !== null)
								td
									a(href=score.url) #{score.user.name}
							else
								td Unknown
							td #{score.date_formatted}

		if((user !== undefined) && (user !== null))
			div(class="col s12 l6")
				h4 Top 10 kaverit
				table(class="")
					thead
						tr
							th Pisteet
							th L&auml;mp&ouml;tila(&deg;C)
							th K&auml;ytt&auml;j&auml;
							th P&auml;iv&auml;m&auml;&auml;r&auml;
					tbody
						each score in score_list_friends
							tr
								td #{score.value} 
								td #{score.temperature}
								if(score.user !== null)
									td
										a(href=score.url) #{score.user.name}
								else
									td Unknown
								td #{score.date_formatted}