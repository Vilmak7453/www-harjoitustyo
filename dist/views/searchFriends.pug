extends layout

block head
	script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")

block content

	div(id="search", class="container")

		h1=title

		div(class="section row")
			div(class="input-field")
				input(class="col m3", type="text", v-model="searchKey", placeholder="Käyttäjätunnus")
				span(class="col btn", v-on:click="search") Hae

		div(class="section row")
			div(class="flow-text col m6 s12")
				ul(class="collection with-header" style="font-size:1rem")
					li(class="collection-header") 
						h6 Hakutulokset
						result-component(
							v-for="res in results", 
							v-bind:result="res", 
							v-bind:key="res.id",
							v-on:add-friend="addFriend(res)"
						)
						
		div(class="section row")
			div(class="col")
				p {{ errortext }}

	
	script(type="text/javascript", src="../searchFriends.js")