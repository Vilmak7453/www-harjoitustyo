extends layout

block head
	script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")

block content
	div(id="profile", class="container")
		div.row(style="display: inline-block")
			form.col(method='GET' action='/profile/updateProfile')
				h1=user.name
					button(class="btn-small waves-effect waves-light orange" type="submit" style="margin-left:1rem") 
						<i class="material-icons">edit</i>
			div.col
				h1
					button(class="btn-small waves-effect waves-light orange" v-on:click="downloadPDF()") 
						<i class="material-icons">file_download</i>
	
		p="Sähköposti: " + user.email

		div(class="section row")
			div(class="flow-text col m5 s12")
				ul(style="font-size:1rem")
					li
						h5 Omat tilastot
					stat-component(
						v-for="stat in stats", 
						v-bind:statistic="stat", 
						v-bind:key="stat.id"
					)
			div(class="flow-text col m5 s12")
				ul(class="collection with-header" style="font-size:1rem")
					li(class="collection-header")
						h5 Omat tulokset top 20
					score-component(
						v-for="item in scores", 
						v-bind:score="item", 
						v-bind:key="item.id"
					)

	script(type="text/javascript", src="../profile.js") 